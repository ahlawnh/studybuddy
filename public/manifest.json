{
    "manifest_version": 3,
    "name": "study buddy",
    "version": "1.0",
    "description": "Your friendly study companion who keeps you on track",
    "permissions": ["tabs", "storage", "sidePanel"],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "images/kitty.png",
            "48": "images/kitty.png",
            "128": "images/kitty.png"
        }
    },
    "side_panel": {
        "default_path": "index.html"
    },

    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "images/kitty.png",
        "48": "images/kitty.png",
        "128": "images/kitty.png"
    }

}
